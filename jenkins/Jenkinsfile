pipeline {
    agent any

    tools {
        maven 'Maven_3.9.6'    // Name as defined in Jenkins Global Tool Config
        jdk 'JDK_21'           // Or the correct name of JDK you've installed
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/JD0425-dev/simple-java-maven-app'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build and tests passed!'
        }
        failure {
            echo '❌ Build or tests failed.'
        }
    }
}
